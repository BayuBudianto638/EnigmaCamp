@model IEnumerable<WebAppMvc.Models.CompanyModel>

@{
    ViewBag.Title = "Company";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Company</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Company
            </div>

            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Address</th>
                                <th>Country</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var companyModel in Model)
                            {
                                <tr class="odd gradeX">
                                    <td>
                                        @Html.DisplayFor(modelItem => companyModel.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => companyModel.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => companyModel.Address)
                                    </td>
                                     <td>
                                        @Html.DisplayFor(modelItem => companyModel.Country)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = companyModel.Id }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = companyModel.Id })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <p>
                    <button class="btn btn-primary" onclick="location.href='@Url.Action("Create", "Company")';">Create</button>
                </p>
            </div>
        </div>
    </div>
</div>
